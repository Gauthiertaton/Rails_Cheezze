

<div class="container_form p-5">
  <h4>Réserves ton appareil à raclette</h4>
  <%= simple_form_for [@raclette_machine, @reservation] do |f| %>
    <div class="form-group inline pt-3 w-40">
      <label for="example-datetime-local-input" class="col-2 col-form-label"></label>
      <div class="col-12">
        <%= f.input :reservation_start_date, class: 'form-control', type: 'datetime-local', value: '2011-08-19T13:45:00' %>
        <!-- <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input"> -->
      </div>
    </div>
    <div class="form-group inline pt-3 w-40">
      <label for="example-date-input" class="col-2 col-form-label"></label>
      <div class="col-12">
        <%= f.input :reservation_end_date, class: 'form-control', type: 'date', value: '19-11-2011-08-19' %>
        <!-- <input class="form-control" type="date" value="2011-08-19" id="example-date-input"> -->
          <%= f.button :submit, 'Reservation', class: 'btn btn-dark mt-4' %>
      </div>
    </div>
  <% end %>
</div>





