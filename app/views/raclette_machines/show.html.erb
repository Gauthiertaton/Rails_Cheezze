


<%= link_to "Retourner à la liste", raclette_machines_path, class: "btn btn-primary m-2 " %>
<div class="container d-flex justify-content-center">
  <div class="card-product">
    <%= cl_image_tag @raclette_machine.photo.key, height: 300, width: 400, crop: :fill %>
    <!-- <img src="https://images.unsplash.com/photo-1522100077728-4fae00f560c8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1581&q=80" /> -->
    <div class="card-product-infos">
      <div class="infos">
          <h2 class = "text-uppercase"><%= @raclette_machine.name %></h2>
          <p><strong>Address :</strong> <%= @raclette_machine.address  %></p>
          <p><strong>Capacité :</strong> <%= @raclette_machine.capacity  %></p>
          <p><strong>Accessories :</strong> <%= @raclette_machine.accessories  %></p>
      </div>

      <h2 class="card-product-pricing text-black"><%= @raclette_machine.price  %></h2>
    </div>
  </div>
  <div class="form">
    <%= render 'reservations/new'%>
  </div>
</div>






